║ <header>{{ "{:^25}".format("Results") }}</header> ║
╚═══════════════════════════╝

{%- if verbose %}
{%- for result in results %}
<bold>DETECTION {{ loop.index }}</bold>
{%- if result.active %}
<key>Status: </key><green>Active</green>
{%- else %}
<key>Status: </key><light-red>Inactive</light-red>
{%- endif %}
{%- if result.name %}
<key>Name: </key><light-yellow>{{ result.name }}</light-yellow>
{%- endif %}
<key>ID: </key><dim>{{ result.detection_id }}</dim>
<key>Created: </key><dim>{{ result.created_at }}</dim>
<key>Updated: </key><dim>{{ result.updated_at }}</dim>
<key>Detection:</key> 
<bold>{{ result.detection }}</bold>
{{ "" }}
{%- endfor %}

{%- else %}
{%- for result in results %}
{%- if result.active %}
{%- if result.shared %}
<bold>{{ result.name }}</bold> <light-yellow>({{ result.created_by_sublime_user_full_name }})</light-yellow> [shared] <green>active</green> <dim>ID: {{ result.detection_id }}</dim>
{%- elif result.subscribed %}
<bold>{{ result.name }}</bold> <light-yellow>({{ result.created_by_sublime_user_full_name }})</light-yellow> [subscribed] <green>active</green> <dim>ID: {{ result.detection_id }}</dim>
{%- else %}
<bold>{{ result.name }}</bold> <light-yellow>({{ result.created_by_sublime_user_full_name }})</light-yellow> <green>active</green> <dim>ID: {{ result.detection_id }}</dim>
{%- endif %}
{%- else %}
{%- if result.shared %}
<bold>{{ result.name }}</bold> <light-yellow>({{ result.created_by_sublime_user_full_name }})</light-yellow> [shared] <light-red>inactive</light-red> <dim>ID: {{ result.detection_id }}</dim>
