<bold>{{ result.name }}</bold> <light-yellow>({{ result.created_by_sublime_user_full_name }})</light-yellow> [subscribed] <light-red>inactive</light-red> <dim>ID: {{ result.detection_id }}</dim>
{%- else %}
<bold>{{ result.name }}</bold> <light-yellow>({{ result.created_by_sublime_user_full_name }})</light-yellow> <light-red>inactive</light-red> <dim>ID: {{ result.detection_id }}</dim>
{%- endif %}
{%- endif %}
{%- endfor %}
{%- endif %}
