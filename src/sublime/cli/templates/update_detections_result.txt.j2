║ <header>{{ "{:^25}".format("Results") }}</header> ║
╚═══════════════════════════╝

{%- for result in success_results %}
{%- if result.changed %}
<bold>{{ result.name }}</bold> <success>updated</success> <dim>ID: {{ result.id }}</dim>
{%- else %}
<bold>{{ result.name }}</bold> <warning>unchanged</warning> <dim>ID: {{ result.id }}</dim>
{%- endif %}
{%- endfor %}

{%- for result in fail_results %}
<fail>Failed: </fail><bold>{{ result.message }}</bold>
{%- endfor %}
