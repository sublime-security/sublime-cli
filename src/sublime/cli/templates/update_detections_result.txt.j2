{%- for result in success_results %}
{%- if result.updated %}
Detection <bold>{{ result.original_name }}</bold> <success>updated</success>. Detection ID: {{ result.detection_id }}
{%- else %}
Detection <bold>{{ result.original_name }}</bold> <warning>unchanged</warning>. Detection ID: {{ result.detection_id }}
{%- endif %}
{%- endfor %}

{%- for result in fail_results %}
Detection <fail>failed: </fail><bold>{{ result.message }}</bold>
{%- endfor %}
