╚═══════════════════════════╝

{%- for result in success_results %}
{%- if result.license_active %}
<success>Activated</success> <bold>{{ result.email_address }}.</bold> <success>Active rules are now running on this user's mailbox.</success>
{%- else %}
<fail>Deactivated</fail> <bold>{{ result.email_address }}.</bold> <fail>Active rules are no longer running on this user's mailbox.</fail>
{%- endif %}
{%- endfor %}

{%- for result in fail_results %}
<fail>Failed: </fail><bold>{{ result.message }}</bold>
{%- endfor %}
